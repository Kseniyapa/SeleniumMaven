<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Suite">
    <test name="AuthorizationPage" annotations="Тест авторизации">
        <groups>
            <run>
                <include name="positive auth test"/>
            </run>
        </groups>
        <classes>
            <class name="com.pflb.school.pages.AuthorizationPage"/>
        </classes>
    </test>

    <test name="MenuPage" annotations="Тест главного меню">
        <groups>
            <run>
                <include name="positive test menu"/>
            </run>
        </groups>
        <classes>
            <class name="com.pflb.school.pages.MenuPage"/>
        </classes>
    </test>
    <listeners>
        <listener class-name="Listener.ScreenshotListener"/>
    </listeners>
</suite>

